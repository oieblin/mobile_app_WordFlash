<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RegistrationActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.HomepageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.TestingPageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.StatisticsActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ProfilePageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AddCardActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.DeckDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AddDeckActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.EditCardActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.EditDeckActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.EditProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.TestResultsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.FlashCardsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

    </application>

</manifest>
